{
  "name": "qurious",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:no-ui": "turbo run dev --filter=!browser-app --filter=!web-api",
    "dev-all": "turbo run dev",
    "dev-web-app": "turbo run dev --filter=web-app",
    "dev-web-www": "turbo run dev --filter=web-www",
    "dev-web-blog": "turbo run dev --filter=web-blog",
    "dev-web-help": "turbo run dev --filter=web-help",
    "dev-web-docs": "turbo run dev --filter=web-docs",
    "dev-browser-app": "turbo run dev --filter=browser-app",
    "dev-backend": "turbo run dev --filter=backend",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "spellcheck": "cspell \"**\"",
    "test": "turbo run test",
    "convex:login": "convex login",
    "convex:dev": "pnpm --filter backend dev",
    "vercel:version": "vercel --version",
    "prepare": "husky install"
  },
  "devDependencies": {
    "convex": "^1.31.2",
    "cspell": "^9.6.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2",
    "vercel": "^50.1.3"
  },
  "dependencies": {
    "zod": "^3.25.76"
  }
}
